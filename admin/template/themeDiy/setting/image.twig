<div class="module_boxer" id="module_image">
    <div class="module_title"><i class="iconfont icon-tupian"></i>细节图</div>
    <form action="#" name="" onsubmit="return false">
        <div>
            <label><input name="open" value="1" type="radio" c-bind-data="State.modules.image.open"> 开启</label>
            <label><input name="open" value="0" type="radio" c-bind-data="State.modules.image.open" checked="checked"> 关闭</label>
        </div>
        <div class="uploader">
            <label><input type="file" name="upfile" accept="image/png, image/jpeg, image/gif, image/jpg"></label>
            <span>请上传750*125尺寸的jpg、png图片</span>
        </div>
        <div class="preview">
            <img c-bind-prop="src" c-bind-data="State.modules.image.url">
        </div>
        <div class="button_layer">
            <button data-click="handleModuleSave" class="btn btn-primary" type="submit">保存</button>
        </div>
        <input type="hidden" value="" name="url" c-bind-prop="value" c-bind-data="State.modules.image.url">
    </form>
</div>