<div class="module_boxer" id="module_promotion">
    <div class="module_title"><i class="iconfont icon-cuxiao"></i>促销信息</div>
    <form action="#" name="" onsubmit="return false">
        <div>
            <label><input name="open" value="1" type="radio" c-bind-data="State.modules.promotion.open"> 开启</label>
            <label><input name="open" value="0" type="radio" c-bind-data="State.modules.promotion.open" checked="checked"> 关闭</label>
        </div>
        <textarea class="form-control" rows='5' name="list" c-bind-data="State.modules.promotion.list"></textarea>
        <p><span>每行代表一项促销信息</span></p>
        <div class="button_layer">
            <button data-click="handleModuleSave" class="btn btn-primary" type="submit">保存</button>
        </div>
    </form>
</div>
<script type="text/javascript">
$(function(){
    $('[c-bind-data="State.modules.promotion.list"]').change(function(){
        State.modules.promotion.list = $(this).val().split("\n");
    });
});
</script>