<div class="module_boxer" id="module_product_info">
    <div class="module_title"><i class="iconfont"></i>显示模块</div>
    <form action="#" name="" onsubmit="return false">
        <div>
            <input type="hidden" name="open" value="1">
        </div>
        <select class="form-control" name="showItem" c-bind-data="State.modules.product_info.showItem">
            <option value="none">不显示模块</option>
            <option value="comment">评论数</option>
        </select>
        <div class="button_layer">
            <button data-click="handleModuleSave" class="btn btn-primary" type="submit">保存</button>
        </div>
    </form>
</div>
<script type="text/javascript">
$(function(){
    Object.defineProperty(State.modules.product_info, 'showItem', {
        set: function(val){
            State.modules.product_info['_showItem'] = val;
            State.render("State.modules.product_info.showItem");
        }
        , get: function(){
            return State.modules.product_info["_showItem"];
        }
    });
});
</script>